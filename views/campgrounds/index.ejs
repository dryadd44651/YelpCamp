<%- include("../partials/header") %>




<div class="container">
    <header class="jumbotron">
        <h1>Welcome to YelpCamp!</h1>
        <p>view our hand-pick campground</p>
        <a class="btn btn-primary btn-large" href="/campgrounds/new">Add new campground</a>
    </header>


    <div class="row" style="display:flex; flex-wrap: wrap;"><!-- wrap if need chang line, change line -->
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-3 col-sm-6"> <!-- medium  size 3/12 small size 6/12 -->
                <div class="thumbnail">
                    <img class="img-thumbnail" src="<%= campground.image %>">
                    <div class="caption">
                        <h4 ><%= campground.name %></h4>
                    </div>
                    <p>
                        <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">more info</a>
                    </p>
                </div>


            </div>


        <% }); %>

    </div>



</div>
<%- include("../partials/footer") %>